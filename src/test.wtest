import casa.*
import cosas.*

test "puede comprar cosas" {
	casaDePepeYJulian.comprar(heladera)
	casaDePepeYJulian.comprar(cama)
	assert.equals([cama, heladera], casaDePepeYJulian.cosas())

}

test "sabe cuantas cosas compro" {
	casaDePepeYJulian.comprar(heladera)
	casaDePepeYJulian.comprar(cama)
	assert.equals([2, casaDePepeYJulian], casaDePepeYJulian.cosas())

}

test "sabe si compro comida" {
	casaDePepeYJulian.comprar(heladera)
	casaDePepeYJulian.comprar(cama)
	assert.equals([cama, heladera], casaDePepeYJulian.cosas())

}